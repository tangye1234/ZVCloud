<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <me.maxwin.view.XListView
        android:id="@+id/monitor_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:layoutAnimation="@anim/list_anim_layout"
        android:overScrollFooter="@null" />

    <FrameLayout
        android:id="@+id/monitor_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <TextView
            android:id="@+id/monitor_empty_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_line_repeat"
            android:gravity="center"
            android:padding="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/empty_btn_txt"
            android:shadowColor="#5c5c5c"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/monitor_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aa0090ff"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/loading_list"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/monitor_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#aa0090ff"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/loading_list"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

</FrameLayout>